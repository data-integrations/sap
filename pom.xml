          <groupId>com.google.adaptor</groupId>
          <artifactId>cs</artifactId>
          <version>0.0.1</version>
          <scope>system</scope>
          <systemPath>${basedir}/src/e2e-test/java/io/cdap/plugin/odp/lib/com.google.adapter.cs-0.0.1.jar</systemPath>
        </dependency>
      </dependencies>

    </profile>
  </profiles>
